<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.shepherd">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Step 2: This permission is depreciated in Android P  -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <application
        android:name=".ShepherdApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.component.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan"  />
        <activity
            android:name=".ui.component.createAccount.CreateNewAccountActivity"
            android:label="@string/create_account"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.component.resetPassword.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:windowSoftInputMode="adjustPan"  />
        <activity
            android:name=".ui.component.forgot_password.ForgotPasswordActivity"
            android:label="@string/forgot_passwd" />
        <activity
            android:name=".ui.component.welcome.WelcomeUserActivity"
            android:label="@string/welcome_user" />
        <activity
            android:name=".ui.component.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.component.recipes.RecipesListActivity"
            android:label="@string/title_activity_recipes">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.component.details.DetailsActivity"
            android:label="@string/title_activity_recipe_details" />
        <activity
            android:name=".ui.component.onBoarding.OnBoardingActivity"
            android:label="@string/title_activity_on_boarding" />
        <activity
            android:name=".ui.component.walk_through.WalkThroughActivity"
            android:label="@string/title_activity_walk_through" />
        <activity
            android:name=".ui.component.createAccount.CreateAccountActivity"
            android:label="@string/title_activity_create_account" />
        <activity
            android:name=".ui.welcome.WelcomeActivity"
            android:label="@string/title_activity_welcome" />
        <activity
            android:name=".ui.component.addLovedOne.AddLovedOneActivity"
            android:label="@string/title_activity_add_loved_one" />
        <activity
            android:name=".ui.component.addLovedOneCondition.AddLovedOneConditionActivity"
            android:label="@string/title_activity_add_loved_one_condition" />
        <activity
            android:name=".ui.component.joinCareTeam.JoinCareTeamActivity"
            android:label="@string/title_activity_join_care_team" />
        <activity
            android:name=".ui.component.addLovedOne.SearchPlacesActivity"
            android:label="@string/search_places" />
        <activity
            android:name=".ui.component.home.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>