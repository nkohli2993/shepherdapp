<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyLight"
        android:orientation="vertical"
        tools:context="com.app.shepherd.ui.component.addLovedOne.AddLovedOneActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutToolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimaryDark"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_group" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewPoppinsSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end|center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/lock_box"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <View
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_4sdp"
                android:background="@color/colorGreen"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutToolbar" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSearch"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/_18sdp"
                app:cardElevation="@dimen/_5sdp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextSearch"
                        style="@style/TextViewPoppinsRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/viewDivider"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/search"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:id="@+id/viewDivider"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:layout_toStartOf="@+id/llSearch"
                        android:background="@color/colorPrimaryDark" />

                    <LinearLayout
                        android:id="@+id/llSearch"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_search_colored" />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNewDocument"
                style="@style/ButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="@{listener::onClick}"
                android:paddingHorizontal="@dimen/_1sdp"
                android:text="@string/new_document"
                android:textAllCaps="false"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewSearch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="@+id/guidelineSearch"
                app:layout_constraintTop_toTopOf="@+id/cardViewSearch" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineSearch"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitleDocuments"
                style="@style/TextViewPoppinsMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/recommended_documents"
                app:layout_constraintStart_toStartOf="@+id/cardViewSearch"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSearch" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDocuments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitleDocuments"
                tools:itemCount="3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/adapter_recommended_documents" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewOtherDocuments"
                style="@style/TextViewPoppinsMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="@string/other_documents"
                app:layout_constraintStart_toStartOf="@+id/recyclerViewDocuments"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewDocuments" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOtherDocuments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/textViewOtherDocuments"
                tools:itemCount="3"
                tools:listitem="@layout/adapter_other_documents" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>