<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{listener::onClick}"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/chatG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="ivChat,ivEdit" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{listener::onClick}"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_chat"
            app:layout_constraintEnd_toStartOf="@+id/ivEdit"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{listener::onClick}"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_edit_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/_FCFCFC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivBack">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:elevation="@dimen/_2sdp"
                    android:paddingVertical="@dimen/_8sdp">

                    <LinearLayout
                        android:id="@+id/llImageWrapper"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:background="@drawable/bg_image_place_holder"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgCareTeamMember"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_1sdp"
                            android:padding="@dimen/_2sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_defalut_profile_pic"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize3Percent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/llImageWrapper"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/llImageWrapper"
                        app:layout_constraintTop_toTopOf="@+id/llImageWrapper">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtCareTeamMemberName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/gotham_medium" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtCareTeamMemberDesignation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/gotham_book" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtRelationCare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:textColor="@color/_399282"
                            android:textSize="@dimen/_12ssp"
                            app:fontFamily="@font/gotham_book"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txtAddressCare" />


                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtEmailCare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:autoLink="email"
                        android:drawableStart="@drawable/ic_email_care"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textColor="@color/_192032"
                        android:textColorLink="@color/_192032"
                        android:textSize="@dimen/_12ssp"
                        app:fontFamily="@font/gotham_book"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/llImageWrapper" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtPhoneCare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:autoLink="phone"
                        android:drawableStart="@drawable/ic_phone_care"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"

                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textColor="@color/_192032"
                        android:textColorLink="@color/_399282"
                        android:textSize="@dimen/_12ssp"

                        app:fontFamily="@font/gotham_book"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtEmailCare" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtAddressCare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_address_care"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textColor="@color/_192032"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:fontFamily="@font/gotham_book"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtPhoneCare" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableStart="@drawable/ic_relation_care"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textColor="@color/_192032"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:fontFamily="@font/gotham_book"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtAddressCare" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/_FCFCFC"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/gotham_bold"
                        android:text="@string/select_access"
                        android:textColor="@color/_192032"
                        android:textSize="@dimen/_15ssp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/carPointCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_7sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_care_point"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text="@string/care_point"
                                android:textColor="@color/_192032"
                                android:textSize="@dimen/_12ssp"
                                app:fontFamily="@font/gotham_medium"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/imgCareTeamMember" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchCarePoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:thumb="@drawable/switch_thumb_selector"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:track="@drawable/switch_track_selector" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/lockBoxCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal"
                                android:padding="@dimen/_7sdp"
                                android:paddingHorizontal="@dimen/_5sdp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:src="@drawable/ic_lock_box" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text="@string/lockbox"
                                    android:textColor="@color/_192032"
                                    android:textSize="@dimen/_12ssp"
                                    app:fontFamily="@font/gotham_medium"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/imgCareTeamMember" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switchLockBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:thumb="@drawable/switch_thumb_selector"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:track="@drawable/switch_track_selector" />


                            </LinearLayout>

                            <View
                                android:id="@+id/line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginHorizontal="@dimen/_13sdp"
                                android:background="@color/_E7E8EA"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/layoutUploadFiles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorWhite"
                                android:orientation="horizontal"
                                android:padding="@dimen/_7sdp"
                                android:paddingHorizontal="@dimen/_5sdp"
                                android:visibility="gone">


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text="@string/upload_files"
                                    android:textColor="@color/_192032"
                                    android:textSize="@dimen/_12ssp"
                                    app:fontFamily="@font/gotham_book"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/imgCareTeamMember" />

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/chkUploadFiles"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:button="@drawable/checkbox_selector"
                                    android:checked="true" />


                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/medlistCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="@dimen/_7sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_medical_list"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text="@string/mymedlist"
                                android:textColor="@color/_192032"
                                android:textSize="@dimen/_12ssp"
                                app:fontFamily="@font/gotham_medium"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/imgCareTeamMember" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchMyMedList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:thumb="@drawable/switch_thumb_selector"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:track="@drawable/switch_track_selector" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/resourcesCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/colorWhite"
                        app:cardCornerRadius="@dimen/_16sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal"
                            android:padding="@dimen/_7sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_resources"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text="@string/resources"
                                android:textColor="@color/_192032"
                                android:textSize="@dimen/_12ssp"
                                app:fontFamily="@font/gotham_medium"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/imgCareTeamMember" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchResources"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:thumb="@drawable/switch_thumb_selector"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:track="@drawable/switch_track_selector" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnDelete"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_black_border"
                            android:fontFamily="@font/gotham_medium"
                            android:onClick="@{listener::onClick}"
                            android:paddingHorizontal="8dp"
                            android:text="@string/remove"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnUpdate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:background="@drawable/button_primary"
                            android:backgroundTint="@color/_399282"
                            android:fontFamily="@font/gotham_medium"
                            android:onClick="@{listener::onClick}"
                            android:paddingHorizontal="8dp"
                            android:text="@string/save_changes"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>