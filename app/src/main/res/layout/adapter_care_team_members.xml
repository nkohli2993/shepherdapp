<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.app.shepherd.data.dto.care_team.CareTeam" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/colorWhite"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_1sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_6sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewCareTeam"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_62sdp"
                android:padding="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="@color/_A26DCB"
                android:src="@drawable/ic_defalut_profile_pic"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize3Percent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@+id/imageViewCareTeam"
                app:layout_constraintTop_toTopOf="@id/imageViewCareTeam"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCareTeam">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewCareTeamName"
                    style="@style/TextViewPoppinsSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCareTeam"
                    app:layout_constraintTop_toTopOf="@+id/imageViewCareTeam" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewCareTeamRole"
                    style="@style/TextViewPoppinsRegular"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintStart_toStartOf="@+id/textViewCareTeamName"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewCareTeam" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>