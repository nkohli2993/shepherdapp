             android:layout_marginHorizontal="@dimen/_10sdp"
             android:fontFamily="@font/gotham_medium"
             android:text="@string/test_date"
             android:textColor="@color/_399282"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/cvReceiver" />-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_8ssp"
            android:visibility="@{messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
            android:fontFamily="@font/gotham_medium"
            android:textColor="@color/_399282"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cvSender" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSendTime"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/_399282">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewGothamBook"
                android:id="@+id/txtSenderMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{messageData.content}"
                android:visibility="@{!messageData.content.empty &amp;&amp; messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
                android:padding="10dp" />

        </androidx.cardview.widget.CardView>


