<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="messageData"
            type="com.shepherd.app.data.dto.chat.MessageData" />


        <variable
            name="userId"
            type="String" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/txtDateReceiverMessage"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="@dimen/_10sdp"
             android:fontFamily="@font/gotham_medium"
             android:text="@string/test_date"
             android:textColor="@color/_399282"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReceivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/gotham_medium"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/_399282"
            android:visibility="@{messageData.senderID.equals(userId)?View.GONE:View.VISIBLE}"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReceivedTime"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/_F2F2F2">


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewGothamBook"
                android:id="@+id/txtReceiverMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{messageData.content}"
                android:visibility="@{!messageData.content.empty &amp;&amp; !messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
                android:padding="10dp" />

        </androidx.cardview.widget.CardView>


        <!-- <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/txtDateSenderMessage"
             android:layout_width="0dp"
