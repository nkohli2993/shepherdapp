<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="messageData"
            type="com.shepherdapp.app.data.dto.chat.MessageData" />


        <variable
            name="userId"
            type="String" />

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvReceivedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/_43sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/gotham_medium"
            android:textAllCaps="true"
            android:textColor="@color/_399282"
            android:textSize="@dimen/_8ssp"
            android:visibility="@{messageData.senderID.equals(userId)?View.GONE:View.VISIBLE}"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvReceiver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="@{messageData.senderID.equals(userId)?View.GONE:View.VISIBLE}"
            app:cardBackgroundColor="@color/_F2F2F2"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReceivedTime"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardViewReceiver">


            <LinearLayout
                android:id="@+id/llImageWrapperReceiver"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/bg_image_place_holder_round_new"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/receiverMessageC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/receiverMessageC">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewUserReceiver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    android:padding="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_defalut_profile_pic"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize37Percent." />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/receiverMessageC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/llImageWrapperReceiver"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/_F2F2F2"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardViewReceiver">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtReceiverName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/gotham_medium"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="@{messageData.senderName}"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtReceiverMessage"
                            style="@style/TextViewGothamBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text="@{messageData.content}"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="@{!messageData.content.empty &amp;&amp; !messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_43sdp"
            android:fontFamily="@font/gotham_medium"
            android:textAllCaps="true"
            android:textColor="@color/_399282"
            android:textSize="@dimen/_8ssp"
            android:visibility="@{messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvReceiver" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvSender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="@{messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSendTime">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/messageCL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintEnd_toStartOf="@+id/llImageWrapperSender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#EAF1EF"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CardViewSender">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtSenderName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/gotham_medium"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:text="@string/me"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtSenderMessage"
                            style="@style/TextViewGothamBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:text="@{messageData.content}"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="@{!messageData.content.empty &amp;&amp; messageData.senderID.equals(userId)?View.VISIBLE:View.GONE}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/llImageWrapperSender"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/bg_image_place_holder_round_new"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/messageCL"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/messageCL">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewUserSender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_1sdp"
                    android:padding="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_splash"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize37Percent." />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>