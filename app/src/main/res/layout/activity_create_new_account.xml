<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.app.shepherd.view_model.CreateNewAccountViewModel" />

    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_10sdp">

        <include
            android:id="@+id/toolBarNew"
            layout="@layout/include_toolbar_new" />

        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/heading_background"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_a_new_account"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/_192032"
                        android:fontFamily="@font/gotham_bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtLogin"
                        android:text="@string/try_shepherd_for_30_days"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/_192032"
                        android:fontFamily="@font/gotham_book"
                        android:layout_marginTop="@dimen/_10sdp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="@dimen/_120sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/_95sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:background="@color/_399282"
                        android:onClick="@{listener::onClick}"
                        android:src="@drawable/ic_outline_person"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgUploadProfilePic"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="140dp"
                        android:onClick="@{listener::onClick}"
                        android:src="@drawable/ic_upload_profile_pic"
                        android:layout_gravity="bottom|end" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingTop="@dimen/_80sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_header"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:id="@+id/layout_first_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toStartOf="@id/layout_last_name"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/edtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                            android:drawableStart="@drawable/ic_profile"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="@string/first_name"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:text="@={viewModel.signUpData.firstname}"
                            bind:getNameError="@{@string/first_name}" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_last_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/layout_first_name"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/edtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                            android:drawableStart="@drawable/ic_profile"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="@string/last_name"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:text="@={viewModel.signUpData.lastname}"
                            bind:getNameError="@{@string/last_name}" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/label_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/email"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_first_name" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/enter_your_email"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="@={viewModel.signUpData.email}"
                        app:layout_constraintTop_toBottomOf="@id/label_email"
                        bind:getEmailError="@{@string/email}" />

                    <TextView
                        android:id="@+id/label_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/phone_number"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editTextEmail" />

                    <LinearLayout
                        android:id="@+id/layoutPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_8sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_phone_number">

                        <androidx.appcompat.widget.AppCompatImageView
                             android:layout_width="@dimen/_12sdp"
                             android:layout_height="@dimen/_12sdp"
                             android:src="@drawable/ic_phone"
                             android:layout_gravity="center"/>

                        <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="16dp"
                            app:ccp_showFlag="false"
                            app:ccp_countryPreference=""
                            app:ccp_defaultCode="1"
                            app:ccp_defaultNameCode="CA"
                            app:ccp_textColor="#1C2020" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="#5E6370"
                            android:paddingVertical="@dimen/_5sdp" />

                        <EditText
                            android:id="@+id/edtPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@null"
                            android:hint="@string/enter_phone_number"
                            android:inputType="number"
                            android:text="@={viewModel.signUpData.phoneNo}"
                            app:layout_constraintTop_toBottomOf="@id/label_phone_number"
                            bind:setPhoneError="@{@string/mobile_number}" />
                        <!--<androidx.appcompat.widget.AppCompatSpinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>-->


                    </LinearLayout>

                    <!-- <EditText
                         android:id="@+id/editTextPhoneNumber"
                         android:layout_width="match_parent"
                         app:layout_constraintTop_toBottomOf="@id/label_phone_number"
                         android:layout_height="@dimen/_34sdp"
                         android:layout_marginTop="@dimen/_4sdp"
                         android:drawableStart="@drawable/ic_phone"
                         android:paddingHorizontal="@dimen/_8sdp"
                         android:drawablePadding="@dimen/_5sdp"
                         android:hint="@string/enter_phone_number"
                         android:text="@={viewModel.signUpData.phoneNo}"
                         android:background="@drawable/shape_rectangle_circular_corner_border_grey" />-->

                    <TextView
                        android:id="@+id/label_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/password"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutPhone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:gravity="center"
                        android:id="@+id/layoutPassword"
                        app:layout_constraintTop_toBottomOf="@id/label_password"
                        android:padding="@dimen/_6sdp"
                        android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:padding="@dimen/_2sdp"
                            android:hint="@string/enter_your_password"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/_192032"
                            android:inputType="textPassword"
                            android:drawableStart="@drawable/ic_passwd"
                            android:drawablePadding="@dimen/_5sdp"
                            bind:getPassError="@{@string/password}" />

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/imageViewPasswordToggle"
                            android:layout_height="@dimen/_24sdp"
                            android:src="@drawable/ic_eye" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkbox_terms_conditions"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:buttonTint="@color/colorPurple"
                        app:layout_constraintEnd_toStartOf="@id/checkbox_text"
                        android:layout_height="@dimen/_30sdp"
                        android:button="@drawable/shape_circular_checkbox"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layoutPassword" />

                    <TextView
                        android:id="@+id/checkbox_text"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:text="@string/I_agree_to_terms_and_conditions_and_privacy_policy"
                        android:textSize="@dimen/_12ssp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/checkbox_terms_conditions"
                        app:layout_constraintTop_toBottomOf="@id/layoutPassword"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCreate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/button_primary"
                        android:backgroundTint="@color/_399282"
                        android:fontFamily="@font/gotham_medium"
                        android:onClick="@{listener::onClick}"
                        android:paddingHorizontal="80dp"
                        android:text="@string/create"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_terms_conditions" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnCreate">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/label_already_registered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/already_have_an_account"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_12ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/gotham_medium"
                            android:onClick="@{listener::onClick}"
                            android:text="@string/log_in"
                            android:textColor="@color/_A26DCB"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>
</layout>