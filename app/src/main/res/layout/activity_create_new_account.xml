<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.app.shepherd.ui.component.createAccount.CreateAccountActivity">

        <include
            android:id="@+id/toolBar"
            layout="@layout/include_toolbar_new" />

        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/heading_background"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/create_a_new_account"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/_192032"
                        android:fontFamily="@font/gotham_bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtLogin"
                        android:text="@string/create_account_description"
                        android:textSize="@dimen/_11ssp"
                        android:textColor="@color/_192032"
                        android:fontFamily="@font/gotham_book"
                        android:layout_marginTop="@dimen/_10sdp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="@dimen/_120sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="@dimen/_10sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/_95sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:background="@color/_399282"
                        android:onClick="@{listener::onClick}"
                        android:src="@drawable/ic_outline_person"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgUploadProfilePic"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="140dp"
                        android:src="@drawable/ic_upload_profile_pic"
                        android:layout_gravity="bottom|end"
                        tools:layout_editor_absoluteY="263dp" />

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:background="@color/colorWhite"
                    android:paddingTop="@dimen/_70sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_header"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_first_name"
                        android:layout_width="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/layout_last_name"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:hint="@string/first_name"
                            android:drawableStart="@drawable/ic_profile"
                            android:drawablePadding="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:background="@drawable/shape_rectangle_circular_corner_border_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/layout_first_name"
                        app:layout_constraintHorizontal_weight="1"
                        android:id="@+id/layout_last_name"
                        android:layout_width="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10ssp"
                            android:layout_height="wrap_content"
                            android:text="@string/last_name" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:hint="@string/last_name"
                            android:drawableStart="@drawable/ic_profile"
                            android:drawablePadding="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:background="@drawable/shape_rectangle_circular_corner_border_grey" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/layout_first_name"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/label_email"
                        android:layout_height="wrap_content"
                        android:text="@string/email" />

                    <EditText
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/label_email"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/editTextEmail"
                        android:drawableStart="@drawable/ic_email"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/enter_your_email"
                        android:background="@drawable/shape_rectangle_circular_corner_border_grey" />

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_10ssp"
                        android:id="@+id/label_phone_number"
                        app:layout_constraintTop_toBottomOf="@id/editTextEmail"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number" />

                    <EditText
                        android:id="@+id/editTextPhoneNumber"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/label_phone_number"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableStart="@drawable/ic_phone"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="@string/enter_phone_number"
                        android:background="@drawable/shape_rectangle_circular_corner_border_grey" />

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_10ssp"
                        android:id="@+id/label_password"
                        app:layout_constraintTop_toBottomOf="@id/editTextPhoneNumber"
                        android:layout_height="wrap_content"
                        android:text="@string/password" />

                    <EditText
                        android:id="@+id/editTextPassword"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/label_password"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableStart="@drawable/ic_passwd"
                        android:drawablePadding="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:hint="@string/enter_your_password"
                        android:drawableEnd="@drawable/ic_eye"
                        android:inputType="textPassword"
                        android:background="@drawable/shape_rectangle_circular_corner_border_grey" />

                    <CheckBox
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox_terms_conditions"
                        android:text="@string/agree_to_terms_and_conditions_and_privacy_policy" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCreate"
                        android:background="@drawable/button_primary"
                        android:backgroundTint="@color/_399282"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_terms_conditions"
                        android:layout_height="@dimen/_40sdp"
                        android:onClick="@{listener::onClick}"
                        android:paddingHorizontal="80dp"
                        android:textSize="@dimen/_13ssp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/create"
                        android:fontFamily="@font/gotham_medium"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnCreate">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/already_have_an_account"
                            android:id="@+id/label_already_registered"
                            android:fontFamily="@font/gotham_book"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/_192032" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_medium"
                            android:text="@string/log_in"
                            android:onClick="@{listener::onClick}"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/_A26DCB"
                            android:layout_marginStart="@dimen/_2sdp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>
</layout>