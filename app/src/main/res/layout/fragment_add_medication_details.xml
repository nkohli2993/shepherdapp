<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyLight">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.shepherd.app.ui.component.addLovedOne.AddLovedOneActivity">


                <LinearLayout
                    android:id="@+id/linearLayoutToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_group" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewPoppinsSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:gravity="end|center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/care_team"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <View
                    android:id="@+id/topView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:background="@color/colorDarkBlue"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutToolbar" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSelectMedicine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topView"
                    tools:layout_editor_absoluteY="10dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewCareTeamRole"
                        style="@style/TextViewPoppinsRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_medicine_name"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintEnd_toEndOf="@+id/textViewCareTeamName"
                        app:layout_constraintStart_toStartOf="@+id/textViewCareTeamName"
                        app:layout_constraintTop_toBottomOf="@+id/textViewCareTeamName" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageViewCheckEmail"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_check_circle_outline"
                        android:tint="@color/colorAccent"
                        app:layout_constraintBottom_toBottomOf="@+id/textInputEmail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textInputEmail" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintStart_toStartOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewSelectMedicine">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewDose"
                            style="@style/TextViewPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/dose"
                            app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewDose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:clickable="false"
                            android:focusable="false"
                            android:visibility="gone"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="4"
                            tools:listitem="@layout/adapter_add_medication_dose" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewFrequency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintStart_toStartOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewDose">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewFrequency"
                            style="@style/TextViewPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/frequency"
                            app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewFrequency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:clickable="false"
                            android:focusable="false"
                            android:visibility="gone"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="4"
                            tools:listitem="@layout/adapter_add_medication_frequency" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSelectTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintStart_toStartOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewFrequency">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewSelectTime"
                            style="@style/TextViewPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/textViewSelectedTime"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/select_time" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imageViewSelectTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:src="@drawable/ic_navigate_next" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewSelectedTime"
                            style="@style/TextViewPoppinsRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/test_time"
                            android:visibility="gone" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintStart_toStartOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewSelectTime">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewDays"
                            style="@style/TextViewPoppinsRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{listener::onClick}"
                            android:padding="@dimen/_12sdp"
                            android:text="@string/days"
                            app:drawableEndCompat="@drawable/ic_arrow_drop_down" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewDays"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:clickable="false"
                            android:focusable="false"
                            android:visibility="gone"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="4"
                            tools:listitem="@layout/adapter_add_medication_days" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewSelectNotes"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_6sdp"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintStart_toStartOf="@+id/cardViewSelectMedicine"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewDays">


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextNotes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:gravity="top"
                        android:hint="@string/notes"
                        android:padding="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="@+id/cardViewSelectTime"
                        app:layout_constraintStart_toStartOf="@+id/cardViewSelectTime"
                        app:layout_constraintTop_toBottomOf="@+id/cardViewSelectTime" />


                </androidx.cardview.widget.CardView>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonAddNewMedication"
                    style="@style/ButtonPrimary"
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="@dimen/_24sdp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:onClick="@{listener::onClick}"
                    android:text="@string/add_new_medication"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewSelectNotes" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
