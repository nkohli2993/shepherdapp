            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRecentContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/recent_content"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintStart_toStartOf="@+id/trendingCl"
                app:layout_constraintTop_toBottomOf="@+id/rvMedicalConditionsTag" />


          <!--  <com.shepherdapp.app.ui.component.resources.FlowLayout
