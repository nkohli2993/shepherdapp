<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/_FCFCFC"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/gotham_book"
                android:lineSpacingMultiplier="1.3"
                android:text="@string/create_care_team"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/gotham_book"
                app:layout_constraintBottom_toTopOf="@+id/cardViewSearch"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/_F3F3F4">

                    <LinearLayout
                        android:id="@+id/llSearch"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/ic_search_colored" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextSearch"
                        style="@style/TextViewPoppinsRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/img_cancel"
                        android:layout_toEndOf="@id/llSearch"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/search"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/_192032"
                        android:textSize="@dimen/_11ssp" />

                    <ImageView
                        android:id="@+id/img_cancel"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_cancel"
                        android:visibility="gone" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCareTeam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="7"
                android:visibility="gone"
                tools:listitem="@layout/adapter_care_team_members" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNoCareTeamFound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/_350sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/no_care_team_found"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_16ssp"
                android:gravity="center"
                android:visibility="gone"
                app:fontFamily="@font/gotham_bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgLovedOne"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/roundedCornersImageView12"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:src="@drawable/ic_defalut_profile_pic" />

                <TextView
                    style="@style/TextViewGothamMedium"
                    android:id="@+id/txtLoved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fghfhjhf"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>