                android:id="@+id/tvHRMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_medium"
                android:text="Max -"
                android:textColor="@color/_D7293F"
                android:textSize="@dimen/_10ssp"
