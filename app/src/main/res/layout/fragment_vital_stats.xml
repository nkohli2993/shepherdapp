<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_white"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingBottom="@dimen/_30sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRemoteMonitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/gotham_book"
                android:text="@string/remotely_monitor_your_loved_one_s_vitals_statistics_via_wearables"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_12ssp"
                android:lineSpacingExtra="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutVitalSyncInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRemoteMonitor"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_vital_stat" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book"
                    android:text="@string/loved_one_needs_to_log_in_to_sync_vitalStats_data"
                    android:textColor="@color/_D7293F"
                    android:textSize="@dimen/_12ssp"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clHeartNTempWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/layoutVitalSyncInfo">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHeartRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toStartOf="@+id/cvBodyTemp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_20sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivHeart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHeartRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:fontFamily="@font/gotham_medium"
                            android:text="@string/heart_rate"
                            android:textColor="@color/_8A569C"
                            android:textSize="@dimen/dimen_15"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivHeart" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHeartRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_bold"
                            android:text="@string/hyphen"
                            android:textColor="@color/_8A569C"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHeartRate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHeartRateUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/bpm"
                            android:textColor="@color/_8A569C"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toEndOf="@+id/tvHeartRateValue"
                            app:layout_constraintTop_toBottomOf="@+id/tvHeartRate" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBodyTemp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cvHeartRate"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/_335F6AB2"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_20sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivBodyTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_temperature"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBodyTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:fontFamily="@font/gotham_medium"
                            android:text="@string/body_temp"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/dimen_15"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivBodyTemp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBodyTempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_bold"
                            android:text="@string/hyphen"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvBodyTemp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBodyTempUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/f"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toEndOf="@+id/tvBodyTempValue"
                            app:layout_constraintTop_toBottomOf="@+id/tvBodyTemp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBloodNOWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/clHeartNTempWrapper">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBloodPressure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toStartOf="@+id/cvOxygen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/_33187AB6"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_20sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivBloodPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_blood_pressure"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBloodPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:fontFamily="@font/gotham_medium"
                            android:text="@string/blood_pressure"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/dimen_15"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivBloodPressure" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvBloodPressureValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_bold"
                            android:text="@string/hyphen"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvBloodPressure" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOxygen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cvBloodPressure"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/_3371C8B7"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_20sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivOxygen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_oxygen"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvOxygen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10ssp"
                            android:fontFamily="@font/gotham_medium"
                            android:text="@string/oxygen"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/dimen_15"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ivOxygen" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvOxygenValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_bold"
                            android:text="@string/hyphen"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvOxygen" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvOxygenUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/gotham_book"
                            android:text="@string/spO2"
                            android:textColor="@color/_192032"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toEndOf="@+id/tvOxygenValue"
                            app:layout_constraintTop_toBottomOf="@+id/tvOxygen" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/typeSpinnerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:onClick="@{listener::onClick}"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clBloodNOWrapper">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/graphTypeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:cursorVisible="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/gotham_medium"
                    android:hint="@string/heart_rate"
                    android:inputType="textMultiLine"
                    android:maxLines="10"
                    android:onClick="@{listener::onClick}"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:textColor="@color/_192032"
                    android:textColorHint="@color/_192032"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/spinner_down_arrow_image"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:contentDescription="@string/app_name"
                    android:onClick="@{listener::onClick}"
                    android:padding="@dimen/_4sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/graphTypeTV"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_spinner"
                    app:tint="@color/colorGreyDark" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:dropDownVerticalOffset="@dimen/_40sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clBloodNOWrapper" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dateSelectedTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_calendar_care_event_small"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:onClick="@{listener::onClick}"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@id/typeSpinner"
                app:layout_constraintTop_toBottomOf="@id/typeSpinner" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/typeRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateSelectedTV" />

            <LinearLayout
                android:id="@+id/layoutMinMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/typeSpinner"
                app:layout_constraintBottom_toBottomOf="@+id/typeSpinner"
                android:gravity="start"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSBP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:visibility="gone"
                        android:text="@string/sbp_with_colon"
                        android:textColor="@color/_192032"
                        android:textSize="@dimen/_9ssp"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHRMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Min - /"
                        android:textColor="@color/_2776FF"
                        android:textSize="@dimen/_9ssp"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHRMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Max -"
                        android:textColor="@color/_D7293F"
                        android:textSize="@dimen/_9ssp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDBP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:text="@string/dbp_with_colon"
                        android:visibility="gone"
                        android:textColor="@color/_192032"
                        android:textSize="@dimen/_9ssp"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtMinDBP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Min DBP - /"
                        android:visibility="gone"
                        android:textColor="@color/_2776FF"
                        android:textSize="@dimen/_9ssp"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtMaxDBP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Max DBP -"
                        android:visibility="gone"
                        android:textColor="@color/_D7293F"
                        android:textSize="@dimen/_9ssp"
                        tools:ignore="HardcodedText" />


                </LinearLayout>

            </LinearLayout>

            <!--  <androidx.appcompat.widget.AppCompatTextView
                  android:id="@+id/tvHRMin"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/_1sdp"
                  android:fontFamily="@font/gotham_medium"
                  android:text="Min - /"
                  android:textColor="@color/_2776FF"
                  android:textSize="@dimen/_10ssp"
                  app:layout_constraintBottom_toBottomOf="@+id/typeSpinner"
                  app:layout_constraintEnd_toStartOf="@+id/tvHRMax"
                  app:layout_constraintTop_toTopOf="@+id/typeSpinner"
                  tools:ignore="HardcodedText" />-->

