            <!--Candle Stick Chart-->
            <!-- <com.github.mikephil.charting.charts.CandleStickChart
                 android:id="@+id/typeChart"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_350sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 app:layout_constraintTop_toBottomOf="@+id/dateSelectedTV" />-->

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/typeChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_320sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/dateSelectedTV"
                android:background="@color/_F9F7FA"
                android:paddingTop="@dimen/_20sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/_2776FF"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/typeChart" />

            <TextView
                style="@style/TextViewGothamMedium"
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_11ssp"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view"
                app:layout_constraintBottom_toBottomOf="@+id/view" />

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/_D7293F"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                style="@style/TextViewGothamMedium"
                android:id="@+id/txtType1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1"
                app:layout_constraintBottom_toBottomOf="@+id/view1" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</layout>