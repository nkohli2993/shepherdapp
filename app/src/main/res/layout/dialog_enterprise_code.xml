<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#40000000"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="@dimen/_14sdp">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtEnterprise"
                style="@style/TextViewGothamBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_20ssp"
                android:text="@string/enter_enterprise_code" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtEnterCode"
                style="@style/TextViewGothamMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                android:textSize="@dimen/_12ssp"
                android:padding="@dimen/_12ssp"
                android:inputType="number"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:hint="@string/enterprise_code"
                android:layout_marginTop="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/llYesNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txtEnterprise"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:background="@drawable/shape_black_border"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_40sdp"
                    android:onClick="@{listener::onClick}"
                    android:paddingHorizontal="30dp"
                    android:textSize="@dimen/_13ssp"
                    android:text="@string/cancel"
                    android:fontFamily="@font/gotham_medium"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSubmit"
                    style="@style/ButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/_399282"
                    android:onClick="@{listener::onClick}"
                    android:paddingHorizontal="30dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>



