<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>


        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:onClick="@{listener::onClick}"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMedList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_bold"
            android:text="@string/change_password"
            android:textColor="@color/_192032"
            android:textSize="@dimen/_20ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBack">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOldPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/old_password"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                android:drawableStart="@drawable/ic_passwd"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/enter_your_old_password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@+id/tvOldPassword" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewPasswordToggle"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:contentDescription="@string/app_name"
                android:onClick="@{listener::onClick}"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_eye"
                app:layout_constraintBottom_toBottomOf="@+id/etOldPassword"
                app:layout_constraintEnd_toEndOf="@+id/etOldPassword"
                app:layout_constraintTop_toTopOf="@+id/etOldPassword" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/new_password"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etOldPassword" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                android:drawableStart="@drawable/ic_passwd"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/enter_new_password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@+id/tvNewPassword"
                bind:getPassError="@{@string/password}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/newPasswordToggle"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:contentDescription="@string/app_name"
                android:onClick="@{listener::onClick}"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_eye"
                app:layout_constraintBottom_toBottomOf="@+id/etNewPassword"
                app:layout_constraintEnd_toEndOf="@+id/etNewPassword"
                app:layout_constraintTop_toTopOf="@+id/etNewPassword" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/gotham_medium"
                android:text="@string/confirm_password"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etNewPassword" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/shape_rectangle_circular_corner_border_grey"
                android:drawableStart="@drawable/ic_passwd"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/enter_confirm_password"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_192032"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintTop_toBottomOf="@+id/tvConfirmPassword"
                bind:getPassError="@{@string/password}" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/confirmPasswordToggle"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:contentDescription="@string/app_name"
                android:onClick="@{listener::onClick}"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_eye"
                app:layout_constraintBottom_toBottomOf="@+id/etConfirmPassword"
                app:layout_constraintEnd_toEndOf="@+id/etConfirmPassword"
                app:layout_constraintTop_toTopOf="@+id/etConfirmPassword" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveChange"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_35sdp"
                android:background="@drawable/button_primary"
                android:backgroundTint="@color/_399282"
                android:fontFamily="@font/gotham_medium"
                android:onClick="@{listener::onClick}"
                android:paddingHorizontal="80dp"
                android:text="@string/save_changes"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>